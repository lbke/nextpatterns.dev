---
import ItemGrid from "@/landing/ui/ItemGrid.astro";
import WidgetWrapper from "@/landing/ui/WidgetWrapper.astro";
import type { Faqs as Props } from "@/types";

const {
  items = [],
  columns = 2,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render("bg"),
} = Astro.props;
---

<WidgetWrapper
  id={id}
  isDark={isDark}
  containerClass={`max-w-7xl mx-auto ${classes?.container ?? ""}`}
  bg={bg}
>
  <div
    class="text-center mb-8 md:mb-12 font-bold
    leading-tighter tracking-tighter font-heading text-heading text-2xl md:text-4xl"
  >
    Frequently Asked Questions
  </div>
  <ItemGrid
    items={items}
    columns={columns}
    defaultIcon="tabler:chevron-right"
    classes={{
      container: `${columns === 1 ? "max-w-4xl" : ""} gap-y-8 md:gap-y-12`,
      panel: "max-w-none",
      icon: "flex-shrink-0 mt-1 w-6 h-6 text-primary",
    }}
  />
</WidgetWrapper>
