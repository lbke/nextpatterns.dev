        <FormAbonnementFooter />
      </div>
      <div class="flex flex-col">
        <img
          src="/img/logo_lbke.png"
          width="80px"
          height="80px"
          class="self-center 2xl:self-end"
        />
        <div class="mt-2 text-center 2xl:text-right">
          <a href="https://www.lbke.fr/" target="_blank" class="text-xs mb-4"
            >www.lbke.fr</a
          >
          <section
            class="flex flex-row flex-wrap justify-center md:justify-end gap-x-3 mb-4 px-4 mt-1 md:px-0 md:text-xl"
          >
            <a href="https://linkedin.com/company/lbke" target="_blank"
              ><Icon name="hugeicons:linkedin-02" size={24} /></a
            >
            <a href="https://github.com/lbke" target="_blank"
              ><Icon name="hugeicons:github-01" size={24} /></a
            >
            <a href="https://x.com/LBKE_FR" target="_blank"
              ><Icon name="hugeicons:new-twitter" size={24} /></a
            >
          </section>
          <div>
            <p class="md:text-xs">contact@lbke.fr</p>
            <p class="md:text-xs mb-4">
              <span class="whitespace-nowrap">(+33)6 89 97 95 70</span>
            </p>
